{
  "version": 2,
  "installCommand": "npm run install:all",
  "buildCommand": "cd backend && npm run build && cd ../frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/recommendations/generate",
      "schedule": "0 0 * * 0"
    }
  ]
}
